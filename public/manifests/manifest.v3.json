{
  "manifest_version": 3,
  "name": "DubsDubs",
  "version": "1.0.0",
  "description": "Adds custom subtitles to YouTube's default subtitle interface",
  "permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
